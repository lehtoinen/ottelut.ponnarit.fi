---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";
import FixtureList from "../components/FixtureList/FixtureList.astro";

import logo from "../img/ponnistus.svg";
---

<Layout title="Otteluohjelma - Helsingin Ponnistus">
  <main>
    <h1>
      <Image src={logo} alt="Helsingin Ponnistus" /> Helsingin Ponnistus
    </h1>
    <FixtureList />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 16px;
    line-height: 1.6;
  }
</style>
