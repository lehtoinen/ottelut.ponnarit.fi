---
import { format } from "date-fns";
import { fi } from "date-fns/locale/fi";

type Props = {
  date: Date;
};

const { date } = Astro.props;

const weekday = format(date, "EEEEEE", { locale: fi });
const dateStr = format(date, "d.M.");
---

<div>
  <div>{weekday}</div>
  <div>{dateStr}</div>
</div>
