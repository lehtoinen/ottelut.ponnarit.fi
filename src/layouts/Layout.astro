---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/ottelut.ponnarit.fi/favicon.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --color-dark: #030700;
    --color-body: #f3f2f1;
    --color-light: #fdfdfc;
    --color-grey: #aca7a3;
    --color-accent: #ff4a4a;
  }

  html {
    font-family: system-ui, sans-serif;
    background: var(--color-dark);
    color: var(--color-body);
    font-size: 16px;
    line-height: 1.6;
  }

  h1 {
    font-size: 1.4em;
    margin: 0;
    font-weight: 500;
  }

  h2 {
    font-size: 1.3em;
    margin: 0.75em 0 0.25em;
    font-weight: 500;
  }

  h3 {
    font-size: 1.1em;
    margin: 0.75em 0 1em;
    font-weight: 500;
  }

  strong {
    font-weight: 500;
  }
</style>
